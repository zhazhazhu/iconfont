{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./types",
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "noImplicitAny": false
  },
  "include": ["components/*.ts"],
  "exclude": ["node_modules", "dist", "examples"]
}
